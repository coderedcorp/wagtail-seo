# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation
[*.py]
indent_size = 4

# 2 space indentation
[*.{css,html,js,scss}]
indent_size = 2
